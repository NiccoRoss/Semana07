<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.weekgineer.LoginFragment"
        android:label="Login">
        <action
            android:id="@+id/action_loginFragment_to_informacion"
            app:destination="@id/fragment_informacion" />
    </fragment>

    <fragment
        android:id="@+id/fragment_informacion"
        android:name="com.example.weekgineer.informacion"
        android:label="InformaciÃ³n"
        tools:layout="@layout/fragment_informacion">

        <action
            android:id="@+id/action_informacion_to_detail"
            app:destination="@id/fragment_detail"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>

    <fragment
        android:id="@+id/fragment_detail"
        android:name="com.example.weekgineer.detail"
        android:label="Detalle"
        tools:layout="@layout/fragment_detail">

        <!-- argumentos -->
        <argument
            android:name="titulo"
            app:argType="string" />
        <argument
            android:name="subhead"
            app:argType="string" />
        <argument
            android:name="infoText"
            app:argType="string" />

        <argument
            android:name="imagenResId"
            app:argType="reference" />
        <argument
            android:name="fecha"
            app:argType="string" />
        <argument
            android:name="descripcion"
            app:argType="string" />
    </fragment>
</navigation>

<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/detailCard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:transitionName="shared_element_container"
    app:cardCornerRadius="35dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imageIn"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/inauguracion"
            android:layout_gravity="center_horizontal" />
        <TextView
            android:id="@+id/tvfecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lunes 02 - 06 - 2025"
            android:textSize="24sp"
            android:textColor="@android:color/black"/>
        <TextView
            android:id="@+id/detailText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="15sp"
            android:text="Ceremonia de Inauguración\nHora: 09:00 horas \nLugar: Plazuela de la UNS \nInvitados: Autoridades UNS, Delegaciones de las Escuelas Profesionales de la Facultad de Ingeniería,
Colaboradores Administrativos, Docentes, Centros de Producción y Estudiantes \n• Ceremonia de Inauguración de la semana del ingeniero  \n• Izamiento del pabellón nacional. \n• Brindis por las autoridades. \n• Compartir  "
            android:textSize="20sp"
            android:textColor="@android:color/black"/>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
